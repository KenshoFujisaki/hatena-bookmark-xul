<bindings xmlns="http://www.mozilla.org/xbl"
          xmlns:xbl="http://www.mozilla.org/xbl"
          xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

    <binding id="addPanel">
        <content>
            <hbox xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
                  flex="1" style="height: 20em;">
                <vbox flex="1">
                    <label>タイトル</label>
                    <hbox>
                        <textbox readonly="true" flex="1"/>
                        <button label="変更する..."/>
                    </hbox>

                    <label>URL</label>
                    <hbox>
                        <textbox value="http://" readonly="true" flex="1"/>
                        <button label="変更する..."/>
                    </hbox>

                    <hbox>
                        <label>コメント</label>
                        <spacer flex="1"/>
                        <label>0 / 100</label>
                    </hbox>
                    <textbox/>

                    <hbox>
                        <button label="追加する"/>
                    </hbox>
                </vbox>

                <tabbox flex="1">
                    <tabs>
                        <tab label="タグ"/>
                        <tab label="画像"/>
                        <tab label="コメント"/>
                    </tabs>
                    <tabpanels flex="1">
                        <tabpanel>
                            <label>タグ一覧</label>
                        </tabpanel>
                        <tabpanel>
                            <label>画像一覧</label>
                        </tabpanel>
                        <tabpanel>
                            <label>コメント一覧</label>
                        </tabpanel>
                    </tabpanels>
                </tabbox>
            </hbox>
        </content>
        <!--
        <implementation>
            <constructor>
                hBookmark.p('Hello');
            </constructor>
        </implementation>
        -->
    </binding>

</bindings>
